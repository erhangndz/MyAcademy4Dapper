
@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Ürünler</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ProductId</th>
            <td>@item.ProductName</td>
            <td>@item.Price ₺</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
