@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
