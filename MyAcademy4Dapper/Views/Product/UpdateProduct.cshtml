@model ResultProductByIdDto
@{
    ViewData["Title"] = "UpdateProduct";
}

<h3>Ürün Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" asp-for="ProductId" />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Açıklama</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Kategori</label>
    <select asp-items="@ViewBag.categories" asp-for="CategoryId" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />
    <button class="btn btn-primary">Güncelle</button>

</form>